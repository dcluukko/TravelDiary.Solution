@using TravelDiary.Models;

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <title>Travel Diary</title>
</head>
<body>
  <div class="container">
    <h1>Travel Diary</h1>
    <hr>
    <p>Use this to keep track of all of your travel experiences!</p>

    @foreach (Place place in Model)
    {
    <div class="card">

    <h1>Location : @place.Name</h1>
    <p>Date: @place.Date</p>
    <p>Description: @place.Description</p>
    <form action="/place/@place.Id/edit" method="get">
      <button type="submit">Edit</button>
    </form>
    </div>
    }

    <a href="/place">View all entries.</a>
    <a href="/place/new">Add a new entry.</a>
  </div>
</body>
</html>